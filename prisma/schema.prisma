generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String        @id(map: "pk_user") @default(uuid())
  email      String        @unique
  password   String
  name       String?
  role       RoleUser
  picture    String
  status     StatusAccount @default(ACTIVE)
  language   String        @default("portuguese")
  appearance Appearance    @default(LIGHT)
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt
  client     Client?
  seller     Seller?

  @@index([id], map: "index_user")
  @@map("user")
}

model Client {
  id_user       String       @id(map: "pk_client")
  level_account LevelAccount @default(initial)
  user          User         @relation(fields: [id_user], references: [id], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_client")
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt

  favorites Favorites[]
  order     Order[]
  cart      Cart[]

  @@map("client")
}

model Seller {
  id_user      String   @id(map: "pk_seller")
  cnpj         String
  store_name   String
  description  String?
  store_active Boolean  @default(true)
  user         User     @relation(fields: [id_user], references: [id], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_seller")
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  product Product[]

  @@map("seller")
}

model Product {
  id          String   @id(map: "pk_product") @default(uuid())
  name        String
  id_seller   String
  price       Float
  description String
  picture     String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  seller Seller @relation(fields: [id_seller], references: [id_user], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_seller_product")

  favorites Favorites[]
  orderItem Order_Item[]
  cart      Cart[]

  @@map("product")
}

model Cart {
  id         String @id(map: "pk_cart") @default(uuid())
  id_product String
  id_client  String

  client  Client  @relation(fields: [id_client], references: [id_user], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_client_cart")
  product Product @relation(fields: [id_product], references: [id], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_product_cart")

  @@unique([id_product, id_client])
  @@map("cart")
}

model Favorites {
  id         String @id(map: "pk_favorites") @default(uuid())
  id_product String
  id_client  String

  client  Client  @relation(fields: [id_client], references: [id_user], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_client_favorites")
  product Product @relation(fields: [id_product], references: [id], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_product_favorites")

  @@unique([id_product, id_client])
  @@map("favorites")
}

model Order {
  id          String      @id(map: "pk_order") @default(uuid())
  id_client   String 
  total_price Decimal
  status      OrderStatus @default(PENDENT)
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt

  client    Client       @relation(fields: [id_client], references: [id_user], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_client_order")
  orderItem Order_Item[]

  @@map("orders")
}

model Order_Item {
  id         String   @id(map: "pk_order_item") @default(uuid())
  id_order   String
  product_id String
  quantity   Int
  price      Decimal
  created_at DateTime @default(now())

  order   Order   @relation(fields: [id_order], references: [id], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_order_order_item")
  product Product @relation(fields: [product_id], references: [id], onUpdate: Cascade, onDelete: Cascade, map: "fk_id_product_order_item")

  @@map("order_item")
}

enum OrderStatus {
  PENDENT
  COMPLETED
  CANCELED
}

enum Appearance {
  LIGHT
  DARK
}

enum StatusAccount {
  ACTIVE
  SUSPENDED
  DELETED
}

enum LevelAccount {
  initial
  silver
  gold
}

enum RoleUser {
  CLIENT
  SELLER
}
